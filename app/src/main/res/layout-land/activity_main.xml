<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/linearLayout"
    tools:context=".MainActivity"
    >

    <LinearLayout
       style="@style/linearLayout3">

        <EditText
            android:id="@+id/editText1"
            style="@style/texts1"
            android:hint="@string/nombre_hint"
            android:inputType="textCapWords|textPersonName"
            android:text="@string/nombre"
            tools:targetApi="o"/>

        <Button
            android:id="@+id/button"
           style="@style/button4"
            android:text="@string/button1" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayout3">

        <EditText
            android:id="@+id/editText2"
            style="@style/texts1"
            android:hint="@string/apellido_hint"
            android:inputType="textCapWords|textPersonName"
            android:text="@string/apellidos"
            tools:targetApi="o"/>

        <Button
            android:id="@+id/button2"
            style="@style/button5"
            android:text="@string/resetear" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearLayout3">

        <EditText
            android:id="@+id/editText3"
            style="@style/texts1"
            android:hint="@string/edad_hint"
            android:inputType="textPersonName|number"
            android:text="@string/edad"
            tools:targetApi="o"/>

        <Spinner
            android:id="@+id/spinner1"
            style="@style/spinner1">

        </Spinner>
    </LinearLayout>

    <RelativeLayout
        style="@style/RelativeLayout">

        <RadioGroup
            android:id="@+id/radioGroupp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hombre" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mujer" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView3"
            style="@style/textView2"
            android:text="@string/hijos" />

        <Switch
            android:id="@+id/switch1"
            style="@style/switch2"
            android:text="@string/no_si" />

        <TextView
            android:id="@+id/textView1"
            style="@style/textView3"
            android:layout_toEndOf="@+id/switch1"
            android:layout_toRightOf="@+id/switch1"
            android:text="@string/textview1" />
    </RelativeLayout>
</LinearLayout>